class Solution {
    public String mergeAlternately(String word1, String word2) {
        int i = 0, j = 0;
        String empty = "";
        while (i < word1.length() || j < word2.length())
        {
            if (i < word1.length())
            {
                empty += word1.charAt(i);
                i++;
            }
            if (j < word2.length())
            {
                empty += word2.charAt(j);
                j++;
            }
        }
        return empty;
    }
}
